generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Entry {
  id           Int    @id @default(autoincrement())  // Primary Key, Auto-increment
  word         String @unique                        // Unique word entry
  definition   String                               // Definition of the word
  partOfSpeech String                               // Part of speech for the word

  createdAt    DateTime @default(now())             // Created timestamp
  updatedAt    DateTime @updatedAt                  // Updated timestamp (auto-updated)
}